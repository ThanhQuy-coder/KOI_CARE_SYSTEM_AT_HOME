@page
@model KoiCareSystemAtHome.WebApplication.Pages.SaltCalculationPages.EditModel

@{
    Layout = "_Layout"; // Ensure your page uses a consistent layout
}

<div class="container my-4">
    <h3 class="text-center text-primary">Edit SaltCalculation</h3>
    <div class="card">
        <div class="card-header bg-info text-white">
            <h4>Edit SaltCalculation Details</h4>
        </div>
        <div class="card-body">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                

                <div class="form-group">
                    <label asp-for="SaltCalculation.RequiredSaltAmount" class="control-label font-weight-bold"></label>
                    <input asp-for="SaltCalculation.RequiredSaltAmount" class="form-control" />
                    <span asp-validation-for="SaltCalculation.RequiredSaltAmount" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="SaltCalculation.CalculationTime" class="control-label font-weight-bold"></label>
                    <input asp-for="SaltCalculation.CalculationTime" class="form-control" />
                    <span asp-validation-for="SaltCalculation.CalculationTime" class="text-danger"></span>
                </div>

                <div class="form-group text-center">
                    <input type="submit" value="Save" class="btn btn-success btn-lg" />
                </div>
            </form>
        </div>
        <div class="card-footer text-center">
            <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
        </div>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
