@page
@model KoiCareSystemAtHome.WebApplication.Pages.SaltCalculationPages.CreateModel

<h4>SaltCalculation</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <!-- Trường hidden để lưu PondId từ model SaltCalculation -->
            <input type="hidden" asp-for="SaltCalculation.PondId" />
            <div class="form-group">
                <label asp-for="SaltCalculation.RequiredSaltAmount" class="control-label"></label>
                <input asp-for="SaltCalculation.RequiredSaltAmount" class="form-control" />
                <span asp-validation-for="SaltCalculation.RequiredSaltAmount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SaltCalculation.CalculationTime" class="control-label"></label>
                <input asp-for="SaltCalculation.CalculationTime" class="form-control" />
                <span asp-validation-for="SaltCalculation.CalculationTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
