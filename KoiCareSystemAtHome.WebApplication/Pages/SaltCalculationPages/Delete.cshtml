@page
@model KoiCareSystemAtHome.WebApplication.Pages.SaltCalculationPages.DeleteModel

@{
    Layout = "_Layout"; // Ensure your page uses a consistent layout.
}

<div class="container my-4">
    <h3 class="text-center text-danger">Are you sure you want to delete this?</h3>
    <div class="card">
        <div class="card-header bg-warning text-dark">
            <h4>SaltCalculation Details</h4>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3 font-weight-bold">
                    @Html.DisplayNameFor(model => model.SaltCalculation.RequiredSaltAmount)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.SaltCalculation.RequiredSaltAmount)
                </dd>

                <dt class="col-sm-3 font-weight-bold">
                    @Html.DisplayNameFor(model => model.SaltCalculation.CalculationTime)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.SaltCalculation.CalculationTime)
                </dd>

                <dt class="col-sm-3 font-weight-bold">
                    @Html.DisplayNameFor(model => model.SaltCalculation.Pond)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.SaltCalculation.Pond.NamePond)
                </dd>
            </dl>
        </div>
        <div class="card-footer text-center">
            <form method="post">
                <input type="hidden" asp-for="SaltCalculation.SaltCalculationId" />
                <button type="submit" class="btn btn-danger mr-2">Delete</button>
                <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
            </form>
        </div>
    </div>
</div>
