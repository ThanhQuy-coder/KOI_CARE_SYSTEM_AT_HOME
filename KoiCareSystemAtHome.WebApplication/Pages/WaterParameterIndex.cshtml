@page
@model IndexModel
@{
    ViewData["Title"] = "WaterParameter";
}
@{
    Layout = "_WaterParameterLayout";
}
<h1>Koi Pond Monitoring</h1>
<button class="open-modal-btn" onclick="openModal()">View Water Parameters</button>
    </div>

<!-- Modal -->
<div id="modal" class="modal">
    <div class="modal-content">
        <span class="close-btn" onclick="closeModal()">&times;</span>
        <h2>Water Parameters</h2>
        <div class="parameters">
            <div class="parameter-card">
                <span>Temperature</span>
                <strong>25.5°C</strong>
            </div>
            <div class="parameter-card">
                <span>Salt Level</span>
                <strong>0.1%</strong>
            </div>
            <div class="parameter-card">
                <span>pH Level</span>
                <strong>7.8</strong>
            </div>
            <div class="parameter-card">
                <span>Oxygen Level</span>
                <strong>8.5 mg/L</strong>
            </div>
            <div class="parameter-card">
                <span>Nitrite</span>
                <strong>0.02 mg/L</strong>
            </div>
            <div class="parameter-card">
                <span>Nitrate</span>
                <strong>0.5 mg/L</strong>
            </div>
            <div class="parameter-card">
                <span>Phosphate</span>
                <strong>0.1 mg/L</strong>
            </div>
        </div>
    </div>
</div>

<script>
    function openModal() {
        document.getElementById("modal").style.display = "flex";
    }

    function closeModal() {
        document.getElementById("modal").style.display = "none";
    }

    // Close modal when clicking outside of it
    window.onclick = function (event) {
        const modal = document.getElementById("modal");
        if (event.target === modal) {
            modal.style.display = "none";
        }
    }
</script>
