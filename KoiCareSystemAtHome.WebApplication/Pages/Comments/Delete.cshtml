@page "{id:int}"
@model DeleteCommentModel
@{
    ViewData["Title"] = "Xóa bình luận";
}

<h2>Xóa bình luận</h2>

<h3>Bạn có chắc chắn muốn xóa bình luận này?</h3>
<div>
    <h4>@Model.Comment.Content</h4>
    <form method="post">
        <button type="submit" class="btn btn-danger">Xóa</button> |
        <a asp-page="./Index" class="btn btn-secondary">Hủy</a>
    </form>
</div>
