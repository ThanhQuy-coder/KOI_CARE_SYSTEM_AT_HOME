@page
@model KoiCareSystemAtHome.WebApplication.Pages.PondPage.CreateModel

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Thêm Hồ Mới</h4>
                </div>
                <div class="card-body">
                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <!-- Trường hidden để lưu UserId từ model Pond -->
                        <input type="hidden" asp-for="Pond.UserId" />

                        <!-- Tên hồ -->
                        <div class="mb-3">
                            <label asp-for="Pond.NamePond" class="form-label"></label>
                            <input asp-for="Pond.NamePond" class="form-control" />
                            <span asp-validation-for="Pond.NamePond" class="text-danger"></span>
                        </div>

                        <!-- Ảnh hồ -->
                        <div class="mb-3">
                            <label asp-for="Pond.ImagePond" class="form-label"></label>
                            <input type="file" asp-for="Pond.ImagePond" class="form-control" />
                            <span asp-validation-for="Pond.ImagePond" class="text-danger"></span>
                        </div>

                        <!-- Độ sâu -->
                        <div class="mb-3">
                            <label asp-for="Pond.Depth" class="form-label"></label>
                            <input asp-for="Pond.Depth" class="form-control" />
                            <span asp-validation-for="Pond.Depth" class="text-danger"></span>
                        </div>

                        <!-- Thể tích -->
                        <div class="mb-3">
                            <label asp-for="Pond.Volume" class="form-label"></label>
                            <input asp-for="Pond.Volume" class="form-control" />
                            <span asp-validation-for="Pond.Volume" class="text-danger"></span>
                        </div>

                        <!-- Số lượng cống -->
                        <div class="mb-3">
                            <label asp-for="Pond.DrainCount" class="form-label"></label>
                            <input asp-for="Pond.DrainCount" class="form-control" />
                            <span asp-validation-for="Pond.DrainCount" class="text-danger"></span>
                        </div>

                        <!-- Công suất máy bơm -->
                        <div class="mb-3">
                            <label asp-for="Pond.PumpCapacity" class="form-label"></label>
                            <input asp-for="Pond.PumpCapacity" class="form-control" />
                            <span asp-validation-for="Pond.PumpCapacity" class="text-danger"></span>
                        </div>

                        <!-- Nút submit -->
                        <div class="d-grid">
                            <button type="submit" class="btn btn-success">Thêm Mới</button>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Back to List -->
            <div class="mt-3 text-center">
                <a asp-page="Index" class="btn btn-secondary">Quay Lại Danh Sách</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
