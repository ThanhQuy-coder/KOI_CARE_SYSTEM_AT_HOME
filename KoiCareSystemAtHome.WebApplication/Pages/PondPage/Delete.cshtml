@page
@model KoiCareSystemAtHome.WebApplication.Pages.PondPage.DeleteModel

<div class="container">
    <h2 class="text-danger text-center mb-4"><i class="fa fa-exclamation-triangle"></i> Xác nhận Xóa Hồ</h2>
    <p class="text-center">Bạn có chắc chắn muốn xóa hồ này? Việc xóa sẽ xóa toàn bộ cá Koi trong hồ!</p>

    <div class="card mx-auto shadow-sm" style="max-width: 600px;">
        <div class="card-body">
            <dl class="row">

                <!-- Tên Hồ -->
                <dt class="col-sm-4"><i class="fa fa-tag"></i> Tên Hồ</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Pond.NamePond)</dd>

                <!-- Ảnh Hồ -->
                <dt class="col-sm-4"><i class="fa fa-image"></i> Ảnh Hồ</dt>
                <dd class="col-sm-8">
                    <img src="/images/@Model.Pond.ImagePond" alt="Pond Image" style="max-width: 100px;" />
                </dd>

                <!-- Độ sâu -->
                <dt class="col-sm-4"><i class="fa fa-arrows-alt-v"></i> Độ sâu</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Pond.Depth) m</dd>

                <!-- Thể tích -->
                <dt class="col-sm-4"><i class="fa fa-cube"></i> Thể tích</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Pond.Volume) m³</dd>

                <!-- Số lượng ống thoát -->
                <dt class="col-sm-4"><i class="fa fa-tint"></i> Số lượng ống thoát</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Pond.DrainCount)</dd>

                <!-- Công suất máy bơm -->
                <dt class="col-sm-4"><i class="fa fa-cogs"></i> Công suất máy bơm</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Pond.PumpCapacity) L/h</dd>

                <!-- Người dùng -->
                <dt class="col-sm-4"><i class="fa fa-user"></i> Người dùng</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Pond.User.FullName)</dd>

            </dl>

            <!-- Nút Xác nhận Xóa -->
            <form method="post" class="text-center mt-4">
                <input type="hidden" asp-for="Pond.PondId" />
                <input type="submit" value="Xóa" class="btn btn-danger btn-lg" /> |
                <a asp-page="./Index" class="btn btn-secondary btn-lg">Quay lại</a>
            </form>
        </div>
    </div>
</div>
