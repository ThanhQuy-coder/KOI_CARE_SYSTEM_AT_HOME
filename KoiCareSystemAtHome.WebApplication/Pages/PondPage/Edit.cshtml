@page
@model KoiCareSystemAtHome.WebApplication.Pages.PondPage.EditModel

<div class="container">
    <div class="card shadow-lg">
        <div class="card-header bg-warning text-dark text-center">
            <h3 class="mb-0"><i class="fa fa-edit"></i> Chỉnh Sửa Hồ</h3>
        </div>
        <div class="col-md-6 mx-auto">
            <form method="post" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                <input type="hidden" asp-for="Pond.PondId" />
                <input type="hidden" asp-for="Pond.ImagePond" /> <!-- Ẩn input để giữ giá trị ảnh cũ -->
                <!-- Tên Hồ -->
                <div class="form-group">
                    <label asp-for="Pond.NamePond" class="control-label"><i class="fa fa-tag"></i> Tên Hồ</label>
                    <input asp-for="Pond.NamePond" class="form-control" placeholder="Nhập tên hồ" />
                    <span asp-validation-for="Pond.NamePond" class="text-danger"></span>
                </div>

                <!-- Ảnh Hồ -->
                <div class="form-group">
                    <label class="control-label"><i class="fa fa-image"></i> Ảnh hiện tại</label>
                    @if (!string.IsNullOrEmpty(Model.Pond.ImagePond))
                    {
                        <div class="mb-2">
                            <img src="/images/@Model.Pond.ImagePond" alt="Pond Image" style="max-width: 200px;" />
                            <p><small>Ảnh hiện tại: @Model.Pond.ImagePond</small></p>
                        </div>
                    }
                    <label asp-for="ImageFile" class="control-label"><i class="fa fa-upload"></i> Chọn ảnh mới (nếu có)</label>
                    <input type="file" asp-for="ImageFile" class="form-control" />
                    <span asp-validation-for="ImageFile" class="text-danger"></span>
                </div>

                <!-- Độ Sâu -->
                <div class="form-group">
                    <label asp-for="Pond.Depth" class="control-label"><i class="fa fa-arrows-alt-v"></i> Độ Sâu</label>
                    <input asp-for="Pond.Depth" class="form-control" placeholder="Nhập độ sâu (m)" />
                    <span asp-validation-for="Pond.Depth" class="text-danger"></span>
                </div>

                <!-- Thể Tích -->
                <div class="form-group">
                    <label asp-for="Pond.Volume" class="control-label"><i class="fa fa-cube"></i> Thể Tích</label>
                    <input asp-for="Pond.Volume" class="form-control" placeholder="Nhập thể tích (m³)" />
                    <span asp-validation-for="Pond.Volume" class="text-danger"></span>
                </div>

                <!-- Số lượng ống thoát -->
                <div class="form-group">
                    <label asp-for="Pond.DrainCount" class="control-label"><i class="fa fa-tint"></i> Số Lượng Ống Thoát</label>
                    <input asp-for="Pond.DrainCount" class="form-control" placeholder="Nhập số lượng ống thoát" />
                    <span asp-validation-for="Pond.DrainCount" class="text-danger"></span>
                </div>

                <!-- Công Suất Máy Bơm -->
                <div class="form-group">
                    <label asp-for="Pond.PumpCapacity" class="control-label"><i class="fa fa-cogs"></i> Công Suất Máy Bơm</label>
                    <input asp-for="Pond.PumpCapacity" class="form-control" placeholder="Nhập công suất (L/h)" />
                    <span asp-validation-for="Pond.PumpCapacity" class="text-danger"></span>
                </div>

                <!-- Nút Lưu -->
                <div class="form-group text-center">
                    <input type="submit" value="Lưu" class="btn btn-primary btn-lg mt-3" />
                    <a asp-page="./Index" class="btn btn-secondary btn-lg mt-3">Quay Lại</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
