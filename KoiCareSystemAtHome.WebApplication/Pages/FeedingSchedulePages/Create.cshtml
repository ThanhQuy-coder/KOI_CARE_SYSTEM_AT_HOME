@page
@model KoiCareSystemAtHome.WebApplication.Pages.FeedingSchedulePages.CreateModel

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Thêm Lịch Cho Cá Ăn</h4>
                </div>
                <div class="card-body">
                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <!-- Trường hidden để lưu FishId từ model FeedingSchedule -->
                        <input type="hidden" asp-for="FeedingSchedule.FishId" />

                        <!-- Thời gian cho ăn -->
                        <div class="mb-3">
                            <label asp-for="FeedingSchedule.FeedingTime" class="form-label"></label>
                            <input asp-for="FeedingSchedule.FeedingTime" class="form-control" />
                            <span asp-validation-for="FeedingSchedule.FeedingTime" class="text-danger"></span>
                        </div>

                        <!-- Lượng thức ăn cần thiết -->
                        <div class="mb-3">
                            <label asp-for="FeedingSchedule.RequiredFoodAmount" class="form-label"></label>
                            <input asp-for="FeedingSchedule.RequiredFoodAmount" class="form-control" />
                            <span asp-validation-for="FeedingSchedule.RequiredFoodAmount" class="text-danger"></span>
                        </div>

                        <!-- Loại thức ăn -->
                        <div class="mb-3">
                            <label asp-for="FeedingSchedule.FoodType" class="form-label"></label>
                            <input asp-for="FeedingSchedule.FoodType" class="form-control" />
                            <span asp-validation-for="FeedingSchedule.FoodType" class="text-danger"></span>
                        </div>

                        <!-- Nút submit -->
                        <div class="d-grid">
                            <button type="submit" class="btn btn-success">Thêm Mới</button>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Back to List -->
            <div class="mt-3 text-center">
                <a asp-page="Index" class="btn btn-secondary">Quay Lại Danh Sách</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
