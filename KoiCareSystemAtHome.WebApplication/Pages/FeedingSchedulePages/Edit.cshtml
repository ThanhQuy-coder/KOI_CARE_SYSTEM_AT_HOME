@page
@model KoiCareSystemAtHome.WebApplication.Pages.FeedingSchedulePages.EditModel

<div class="container mt-5">
    <!-- Tiêu đề -->
    <div class="text-center p-3 mb-4" style="background-color: #f8d775; border-radius: 8px;">
        <h4 class="m-0">Feeding Schedule</h4>
    </div>

    <!-- Form -->
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                <input type="hidden" asp-for="FeedingSchedule.FeedingScheduleId" />

                <!-- Feeding Time -->
                <div class="form-group mb-4">
                    <label asp-for="FeedingSchedule.FeedingTime" class="form-label">
                        <i class="bi bi-clock"></i> Feeding Time
                    </label>
                    <input asp-for="FeedingSchedule.FeedingTime" class="form-control" placeholder="Select Feeding Time" />
                    <span asp-validation-for="FeedingSchedule.FeedingTime" class="text-danger"></span>
                </div>

                <!-- Required Food Amount -->
                <div class="form-group mb-4">
                    <label asp-for="FeedingSchedule.RequiredFoodAmount" class="form-label">
                        <i class="bi bi-box-seam"></i> Required Food Amount
                    </label>
                    <input asp-for="FeedingSchedule.RequiredFoodAmount" class="form-control" placeholder="Enter Food Amount" />
                    <span asp-validation-for="FeedingSchedule.RequiredFoodAmount" class="text-danger"></span>
                </div>

                <!-- Food Type -->
                <div class="form-group mb-4">
                    <label asp-for="FeedingSchedule.FoodType" class="form-label">
                        <i class="bi bi-basket"></i> Food Type
                    </label>
                    <input asp-for="FeedingSchedule.FoodType" class="form-control" placeholder="Enter Food Type" />
                    <span asp-validation-for="FeedingSchedule.FoodType" class="text-danger"></span>
                </div>

                <!-- Buttons -->
                <div class="text-center mt-4">
                    <button type="submit" class="btn btn-primary btn-lg me-2">
                        <i class="bi bi-save"></i> Save
                    </button>
                    <a asp-page="./Index" class="btn btn-secondary btn-lg">
                        <i class="bi bi-arrow-left-circle"></i> Back to List
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
