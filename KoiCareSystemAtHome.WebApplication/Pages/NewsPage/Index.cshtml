@page
@model KoiCareSystemAtHome.WebApplication.Pages.NewsPage.IndexModel

<link rel="stylesheet" href="/css/News.css" />

<!-- Nút hành động -->
<div class="action-buttons">
    <a asp-page="Create" class="btn btn-primary">Create New</a>
    <a asp-page="Index" class="btn btn-secondary">Back</a>
</div>

<!-- Form tìm kiếm -->
<form method="get" asp-page="./Index" class="search-form">
    <input type="text" name="searchTerm" value="@Model.SearchTerm" placeholder="Search by Title or Content..." class="form-control search-input" />
    <input type="text" name="author" value="@Request.Query["author"]" placeholder="Author..." class="form-control search-input" />
    <input type="date" name="publishDate" value="@Request.Query["publishDate"]" class="form-control search-input" />
    <button type="submit" class="btn btn-primary">Search</button>
</form>

<!-- Container bài viết -->
<div class="news-container">
    @foreach (var item in Model.News)
    {
        <div class="news-item">
            <!-- Ảnh bài viết -->
            <div class="news-image-container">
                @if (!string.IsNullOrEmpty(item.ImageUrl))
                {
                    <img src="@item.ImageUrl" alt="News Image" class="news-image" />
                }
                else
                {
                    <img src="/images/default-image.png" alt="Default Image" class="news-image" />
                }
            </div>

            <!-- Nội dung bài viết -->
            <div class="news-content">
                <h3 class="news-title">@item.Title</h3>
                <p class="news-author"><strong>Author:</strong> @item.Author</p>
                <p class="news-date"><strong>Publish Date:</strong> @item.PublishDate.ToShortDateString()</p>

                <!-- Nút hành động -->
                <div class="news-actions">
                    <a asp-page="./Edit" asp-route-id="@item.PostId" class="btn btn-edit">Edit</a>
                    <a asp-page="./Details" asp-route-id="@item.PostId" class="btn btn-details">Details</a>
                    <a asp-page="./Delete" asp-route-id="@item.PostId" class="btn btn-delete">Delete</a>
                </div>
            </div>
        </div>
    }
</div>

<style>
    /* Container chính */
    .news-container {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 25px;
        padding: 20px;
        margin-top: 20px;
        background-color: #f8f9fa;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    /* Card bài viết */
    .news-item {
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        background: #ffffff;
        border-radius: 15px;
        overflow: hidden;
        transition: transform 0.3s, box-shadow 0.3s;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    }

        .news-item:hover {
            transform: translateY(-10px);
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2);
        }

    /* Hình ảnh bài viết */
    .news-image-container {
        height: 200px;
        overflow: hidden;
        background-color: #f4f4f4;
    }

    .news-image {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.3s ease;
    }

    .news-item:hover .news-image {
        transform: scale(1.1);
    }

    /* Nội dung bài viết */
    .news-content {
        padding: 20px;
        flex-grow: 1;
    }

    .news-title {
        font-size: 1.4rem;
        font-weight: bold;
        color: #343a40;
        margin-bottom: 10px;
        text-transform: capitalize;
        text-overflow: ellipsis;
        white-space: nowrap;
        overflow: hidden;
    }

        .news-title:hover {
            color: #007bff;
        }

    .news-author,
    .news-date {
        font-size: 0.95rem;
        color: #6c757d;
        margin-bottom: 10px;
    }

    /* Nút hành động */
    .news-actions {
        display: flex;
        gap: 10px;
        justify-content: space-between;
        align-items: center;
        background: #f8f9fa;
        padding: 15px;
        border-top: 1px solid #e9ecef;
        border-radius: 0 0 15px 15px;
    }

    .btn {
        flex: 1;
        padding: 10px 15px;
        text-align: center;
        font-size: 0.9rem;
        border-radius: 5px;
        transition: all 0.3s ease;
        cursor: pointer;
        text-decoration: none;
        font-weight: bold;
        text-transform: uppercase;
    }

    .btn-edit {
        background: #17a2b8;
        color: #fff;
    }

        .btn-edit:hover {
            background: #138496;
        }

    .btn-details {
        background: #28a745;
        color: #fff;
    }

        .btn-details:hover {
            background: #218838;
        }

    .btn-delete {
        background: #dc3545;
        color: #fff;
    }

        .btn-delete:hover {
            background: #c82333;
        }

    /* Tìm kiếm */
    .search-form {
        display: flex;
        flex-wrap: wrap;
        gap: 15px;
        margin-bottom: 20px;
        padding: 15px;
        background: #ffffff;
        border-radius: 10px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    }

    .search-input {
        flex: 1;
        padding: 12px 15px;
        border-radius: 5px;
        border: 1px solid #ccc;
        font-size: 1rem;
        transition: border-color 0.3s, box-shadow 0.3s;
    }

        .search-input:focus {
            border-color: #007bff;
            outline: none;
            box-shadow: 0 0 8px rgba(0, 123, 255, 0.3);
        }

    .search-form button {
        padding: 12px 20px;
        font-size: 1rem;
        border: none;
        border-radius: 5px;
        background: #007bff;
        color: #fff;
        cursor: pointer;
        transition: background 0.3s ease;
    }

        .search-form button:hover {
            background: #0056b3;
        }

    /* Khoảng cách cho nút "Create New" và "Back" */
    .action-buttons {
        display: flex;
        gap: 15px;
        margin-bottom: 20px;
    }

        .action-buttons .btn {
            padding: 12px 20px;
            font-size: 1rem;
        }
</style>
