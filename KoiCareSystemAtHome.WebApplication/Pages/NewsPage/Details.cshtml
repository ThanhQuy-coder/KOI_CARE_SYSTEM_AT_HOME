@page
@model KoiCareSystemAtHome.WebApplication.Pages.NewsPage.DetailsModel

<style>
    /* Định nghĩa CSS cho chi tiết tin tức */
    .details-container {
        display: flex;
        justify-content: space-between;
        padding: 20px;
        gap: 30px;
    }

    .news-details {
        flex: 2;
        background: #ffffff;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

        .news-details h2 {
            font-size: 28px;
            margin-bottom: 20px;
        }

        .news-details .author,
        .news-details .publish-date {
            font-size: 16px;
            margin-bottom: 10px;
        }

        .news-details .content {
            font-size: 18px;
            margin-bottom: 20px;
            line-height: 1.6;
        }

    /* Định nghĩa CSS cho Other News */
    .other-news {
        flex: 1;
        background: #f9f9f9;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

        .other-news h4 {
            font-size: 24px;
            margin-bottom: 20px;
            text-align: center;
        }

    .other-news-container {
        display: flex;
        flex-direction: column;
        gap: 20px;
    }

    .other-news-item {
        background: #ffffff;
        padding: 15px;
        border-radius: 8px;
        box-shadow: 0 0 8px rgba(0, 0, 0, 0.05);
    }

        .other-news-item h5 {
            font-size: 20px;
            margin-bottom: 10px;
        }

        .other-news-item p {
            font-size: 14px;
            margin-bottom: 10px;
            color: #555;
        }

    .btn-link {
        color: #007bff;
        text-decoration: none;
        font-weight: bold;
    }

        .btn-link:hover {
            text-decoration: underline;
        }
</style>

<div class="details-container">
    <div class="news-details">
        <h2>@Model.News.Title</h2>
        <img src="~/images/OIP.jpg" alt="Description of the image" />

        <p class="author"><strong>Author:</strong> @Model.News.Author</p>
        <p class="content">@Model.News.Content</p>
        <p class="publish-date"><strong>Publish Date:</strong> @Model.News.PublishDate.ToString("dd/MM/yyyy hh:mm tt")</p>
    </div>

    <div class="other-news">
        <h4>Other News</h4>
        <div class="other-news-container">
            @foreach (var news in Model.OtherNews)
            {
                <div class="other-news-item">
                    <h5>@news.Title</h5>
                    <p>@(news.Content.Length > 100 ? news.Content.Substring(0, 100) + "..." : news.Content)</p>
                    <a asp-page="./Details" asp-route-id="@news.PostId" class="btn-link">Read More</a>
                </div>
            }
        </div>
    </div>
</div>

