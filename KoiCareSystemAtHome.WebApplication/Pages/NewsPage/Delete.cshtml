@page
@model KoiCareSystemAtHome.WebApplication.Pages.NewsPage.DeleteModel

<div class="delete-container">
    <h3>Are you sure you want to delete this?</h3>
    <div class="news-details">
        <h4>News</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.News.Author)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.News.Author)</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.News.Title)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.News.Title)</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.News.Content)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.News.Content)</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.News.PublishDate)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.News.PublishDate)</dd>
        </dl>
    </div>

    <form method="post" class="form-actions">
        <input type="hidden" asp-for="News.PostId" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>

<style>
    /* Container chính */
    .delete-container {
        max-width: 600px;
        margin: 50px auto;
        background-color: #ffffff;
        padding: 30px;
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        font-family: Arial, sans-serif;
    }

    /* Tiêu đề chính */
    .delete-container h3 {
        text-align: center;
        color: #dc3545; /* Màu đỏ cảnh báo */
        margin-bottom: 20px;
    }

    /* Tiêu đề phụ */
    .news-details h4 {
        text-align: center;
        color: #333;
        margin-bottom: 20px;
    }

    /* Thông tin bài viết */
    .news-details dl {
        font-size: 16px;
        line-height: 1.6;
        color: #555;
    }

    .news-details dt {
        font-weight: bold;
        color: #333;
    }

    .news-details dd {
        margin-bottom: 10px;
    }

    /* Các nút hành động */
    .form-actions {
        display: flex;
        justify-content: center;
        gap: 20px;
        margin-top: 20px;
    }

    .btn {
        padding: 10px 20px;
        font-size: 16px;
        border-radius: 5px;
        text-decoration: none;
        border: none;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }

    .btn-danger {
        background-color: #dc3545;
        color: #ffffff;
    }

    .btn-danger:hover {
        background-color: #c82333;
    }

    .btn-secondary {
        background-color: #6c757d;
        color: #ffffff;
    }

    .btn-secondary:hover {
        background-color: #5a6268;
    }
</style>

