@page
@model KoiCareSystemAtHome.WebApplication.Pages.KoiFishPage.CreateModel

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Thêm Cá Koi Mới</h4>
                </div>
                <div class="card-body">
                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <input type="hidden" asp-for="KoiFish.PondId" />

                        <div class="mb-3">
                            <label asp-for="KoiFish.NameFish" class="form-label"></label>
                            <input asp-for="KoiFish.NameFish" class="form-control" />
                            <span asp-validation-for="KoiFish.NameFish" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="KoiFish.ImageFish" class="form-label"></label>
                            <input type="file" asp-for="KoiFish.ImageFish" class="form-control" />
                            <span asp-validation-for="KoiFish.ImageFish" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="KoiFish.BodyShape" class="form-label"></label>
                            <input asp-for="KoiFish.BodyShape" class="form-control" />
                            <span asp-validation-for="KoiFish.BodyShape" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="KoiFish.AgeFish" class="form-label"></label>
                            <input asp-for="KoiFish.AgeFish" class="form-control" />
                            <span asp-validation-for="KoiFish.AgeFish" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="KoiFish.Size" class="form-label"></label>
                            <input asp-for="KoiFish.Size" class="form-control" />
                            <span asp-validation-for="KoiFish.Size" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="KoiFish.WeightFish" class="form-label"></label>
                            <input asp-for="KoiFish.WeightFish" class="form-control" />
                            <span asp-validation-for="KoiFish.WeightFish" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="KoiFish.Gender" class="form-label"></label>
                            <input asp-for="KoiFish.Gender" class="form-control" />
                            <span asp-validation-for="KoiFish.Gender" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="KoiFish.Breed" class="form-label"></label>
                            <input asp-for="KoiFish.Breed" class="form-control" />
                            <span asp-validation-for="KoiFish.Breed" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="KoiFish.Origin" class="form-label"></label>
                            <input asp-for="KoiFish.Origin" class="form-control" />
                            <span asp-validation-for="KoiFish.Origin" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="KoiFish.Price" class="form-label"></label>
                            <input asp-for="KoiFish.Price" class="form-control" />
                            <span asp-validation-for="KoiFish.Price" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="KoiFish.FishLocation" class="form-label"></label>
                            <input asp-for="KoiFish.FishLocation" class="form-control" />
                            <span asp-validation-for="KoiFish.FishLocation" class="text-danger"></span>
                        </div>
                        <div class="d-grid">
                            <button type="submit" class="btn btn-success">Thêm Mới</button>
                        </div>
                    </form>
                </div>
            </div>
            <div class="mt-3 text-center">
                <a asp-page="Index" class="btn btn-secondary">Quay Lại Danh Sách</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
