@model KoiCareSystemAtHome.WebApplication.Pages.ProductPage.CreateModel

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Thêm Sản Phẩm Mới</h4>
                </div>
                <div class="card-body">
                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <!-- Trường hidden để lưu UserId từ model Product -->
                        <input type="hidden" asp-for="Product.UserId" />

                        <!-- Tên sản phẩm -->
                        <div class="mb-3">
                            <label asp-for="Product.ProductName" class="form-label"></label>
                            <input asp-for="Product.ProductName" class="form-control" />
                            <span asp-validation-for="Product.ProductName" class="text-danger"></span>
                        </div>

                        <!-- Ảnh sản phẩm -->
                        <div class="mb-3">
                            <label asp-for="Product.ImageProduct" class="form-label"></label>
                            <input type="file" asp-for="Product.ImageProduct" class="form-control" />
                            <span asp-validation-for="Product.ImageProduct" class="text-danger"></span>
                        </div>

                        <!-- Giá sản phẩm -->
                        <div class="mb-3">
                            <label asp-for="Product.Price" class="form-label"></label>
                            <input asp-for="Product.Price" class="form-control" />
                            <span asp-validation-for="Product.Price" class="text-danger"></span>
                        </div>

                        <!-- Mô tả sản phẩm -->
                        <div class="mb-3">
                            <label asp-for="Product.Desciption" class="form-label"></label>
                            <input asp-for="Product.Desciption" class="form-control" />
                            <span asp-validation-for="Product.Desciption" class="text-danger"></span>
                        </div>

                        <!-- Loại sản phẩm -->
                        <div class="mb-3">
                            <label asp-for="Product.ProductType" class="form-label"></label>
                            <input asp-for="Product.ProductType" class="form-control" />
                            <span asp-validation-for="Product.ProductType" class="text-danger"></span>
                        </div>

                        <!-- Ngày nhập sản phẩm -->
                        <div class="mb-3">
                            <label asp-for="Product.DatePlace" class="form-label"></label>
                            <input asp-for="Product.DatePlace" class="form-control" />
                            <span asp-validation-for="Product.DatePlace" class="text-danger"></span>
                        </div>

                        <!-- Nút submit -->
                        <div class="d-grid">
                            <button type="submit" class="btn btn-success">Thêm Mới</button>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Back to List -->
            <div class="mt-3 text-center">
                <a asp-page="Index" class="btn btn-secondary">Quay Lại Danh Sách</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
