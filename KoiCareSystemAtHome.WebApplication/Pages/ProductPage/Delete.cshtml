@page
@model KoiCareSystemAtHome.WebApplication.Pages.ProductPage.DeleteModel

<div class="container">
    <h2 class="text-danger text-center mb-4"><i class="fa fa-exclamation-triangle"></i> Xác nhận Xóa Sản Phẩm</h2>
    <p class="text-center">Bạn có chắc chắn muốn xóa sản phẩm này?</p>

    <div class="card mx-auto shadow-sm" style="max-width: 600px;">
        <div class="card-body">
            <dl class="row">

                <!-- Tên Sản Phẩm -->
                <dt class="col-sm-4 text-muted"><i class="fa fa-tag"></i> Tên Sản Phẩm:</dt>
                <dd class="col-sm-8 font-weight-bold">@Html.DisplayFor(model => model.Product.ProductName)</dd>

                <!-- Ảnh Sản Phẩm -->
                <dt class="col-sm-4 text-muted"><i class="fa fa-image"></i> Ảnh Sản Phẩm:</dt>
                <dd class="col-sm-8">
                    <img src="/images/@Model.Product.ImageProduct" alt="Product Image" style="max-width: 150px;" class="img-thumbnail" />
                </dd>

                <!-- Giá -->
                <dt class="col-sm-4 text-muted"><i class="fa fa-dollar-sign"></i> Giá:</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Product.Price) đ</dd>

                <!-- Mô tả -->
                <dt class="col-sm-4 text-muted"><i class="fa fa-align-left"></i> Mô tả:</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Product.Desciption)</dd>

                <!-- Loại Sản Phẩm -->
                <dt class="col-sm-4 text-muted"><i class="fa fa-box"></i> Loại Sản Phẩm:</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Product.ProductType)</dd>

                <!-- Ngày Đặt -->
                <dt class="col-sm-4 text-muted"><i class="fa fa-calendar"></i> Ngày Đặt:</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Product.DatePlace)</dd>

                <!-- Người Tạo -->
                <dt class="col-sm-4 text-muted"><i class="fa fa-user"></i> Người Tạo:</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Product.User.FullName)</dd>

            </dl>

            <!-- Nút Xác nhận Xóa -->
            <form method="post" class="text-center mt-4">
                <input type="hidden" asp-for="Product.ProductId" />
                <input type="submit" value="Xóa" class="btn btn-danger btn-lg" /> |
                <a asp-page="./Index" class="btn btn-secondary btn-lg">Quay lại</a>
            </form>
        </div>
    </div>
</div>
