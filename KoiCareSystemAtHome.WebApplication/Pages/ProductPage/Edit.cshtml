@page
@model KoiCareSystemAtHome.WebApplication.Pages.ProductPage.EditModel

<div class="container">
    <div class="card shadow-lg">
        <div class="card-header bg-warning text-dark text-center">
            <h3 class="mb-0"><i class="fa fa-edit"></i> Chỉnh Sửa Sản Phẩm</h3>
        </div>
        <div class="col-md-6 mx-auto">
            <form method="post" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                <input type="hidden" asp-for="Product.ProductId" />
                <input type="hidden" asp-for="Product.ImageProduct" /> <!-- Ẩn input để giữ giá trị ảnh cũ -->
                <!-- Tên Sản Phẩm -->
                <div class="form-group">
                    <label asp-for="Product.ProductName" class="control-label"><i class="fa fa-tag"></i> Tên Sản Phẩm</label>
                    <input asp-for="Product.ProductName" class="form-control" placeholder="Nhập tên sản phẩm" />
                    <span asp-validation-for="Product.ProductName" class="text-danger"></span>
                </div>

                <!-- Ảnh Sản Phẩm -->
                <div class="form-group">
                    <label class="control-label"><i class="fa fa-image"></i> Ảnh hiện tại</label>
                    @if (!string.IsNullOrEmpty(Model.Product.ImageProduct))
                    {
                        <div class="mb-2">
                            <img src="/images/@Model.Product.ImageProduct" alt="Product Image" style="max-width: 200px;" />
                            <p><small>Ảnh hiện tại: @Model.Product.ImageProduct</small></p>
                        </div>
                    }
                    <label asp-for="ImageFile" class="control-label"><i class="fa fa-upload"></i> Chọn ảnh mới (nếu có)</label>
                    <input type="file" asp-for="ImageFile" class="form-control" />
                    <span asp-validation-for="ImageFile" class="text-danger"></span>
                </div>

                <!-- Giá -->
                <div class="form-group">
                    <label asp-for="Product.Price" class="control-label"><i class="fa fa-dollar-sign"></i> Giá</label>
                    <input asp-for="Product.Price" class="form-control" placeholder="Nhập giá" />
                    <span asp-validation-for="Product.Price" class="text-danger"></span>
                </div>

                <!-- Mô tả -->
                <div class="form-group">
                    <label asp-for="Product.Desciption" class="control-label"><i class="fa fa-align-left"></i> Mô tả</label>
                    <textarea asp-for="Product.Desciption" class="form-control" rows="4" placeholder="Nhập mô tả"></textarea>
                    <span asp-validation-for="Product.Desciption" class="text-danger"></span>
                </div>

                <!-- Loại Sản Phẩm -->
                <div class="form-group">
                    <label asp-for="Product.ProductType" class="control-label"><i class="fa fa-box"></i> Loại Sản Phẩm</label>
                    <input asp-for="Product.ProductType" class="form-control" placeholder="Nhập loại sản phẩm" />
                    <span asp-validation-for="Product.ProductType" class="text-danger"></span>
                </div>

                <!-- Ngày Đặt -->
                <div class="form-group">
                    <label asp-for="Product.DatePlace" class="control-label"><i class="fa fa-calendar"></i> Ngày Đặt</label>
                    <input asp-for="Product.DatePlace" class="form-control" placeholder="Nhập ngày đặt" />
                    <span asp-validation-for="Product.DatePlace" class="text-danger"></span>
                </div>

                <!-- Nút Lưu -->
                <div class="form-group text-center">
                    <input type="submit" value="Save" class="btn btn-primary btn-lg mt-3" />
                    <a asp-page="./Index" class="btn btn-secondary btn-lg mt-3">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>
