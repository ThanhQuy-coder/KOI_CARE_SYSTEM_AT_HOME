@page
@model KoiCareSystemAtHome.WebApplication.Pages.ProductPage.DetailsModel

<div class="container my-5">
    <div class="card shadow-lg">
        <div class="card-header bg-info text-white text-center">
            <h3 class="mb-0"><i class="fa fa-box"></i> Chi tiết Sản Phẩm</h3>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-4 text-center mb-4">
                    <!-- Ảnh sản phẩm lớn hơn, căn giữa -->
                    <img src="/images/@Model.Product.ImageProduct" alt="Product Image" class="img-fluid rounded" style="max-width: 100%; height: auto; object-fit: cover;">
                </div>
                <div class="col-md-8">
                    <dl class="row">
                        <dt class="col-sm-4 text-muted"><i class="fa fa-tag"></i> Tên Sản Phẩm:</dt>
                        <dd class="col-sm-8 font-weight-bold">@Html.DisplayFor(model => model.Product.ProductName)</dd>

                        <dt class="col-sm-4 text-muted"><i class="fa fa-dollar-sign"></i> Giá:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Product.Price) đ</dd>

                        <dt class="col-sm-4 text-muted"><i class="fa fa-align-left"></i> Mô tả:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Product.Desciption)</dd>

                        <dt class="col-sm-4 text-muted"><i class="fa fa-box"></i> Loại Sản Phẩm:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Product.ProductType)</dd>

                        <dt class="col-sm-4 text-muted"><i class="fa fa-calendar"></i> Ngày Đặt:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Product.DatePlace)</dd>

                        <dt class="col-sm-4 text-muted"><i class="fa fa-user"></i> Người Tạo:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Product.User.FullName)</dd>
                    </dl>
                </div>
            </div>
        </div>
        <div class="card-footer text-center">
            <a asp-page="./Edit" asp-route-id="@Model.Product.ProductId" class="btn btn-warning me-2"><i class="fa fa-edit"></i> Chỉnh Sửa</a>
            <a asp-page="./Index" class="btn btn-secondary"><i class="fa fa-arrow-left"></i> Quay Lại</a>
        </div>
    </div>
</div>
